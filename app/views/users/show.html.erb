<div class="body">
	<div class="container">
		<p id="notice"></p>
			<div class="row">
<%= render 'books/link', user: @user , book: @book  %>

  <div class="col-xs-9">
		<h2>Books</h2>
		<table class="table table-hover">
		<tbody>
        <tr>
        <th>
        </th>
        <th>
          <p>Title</p>
        </th>
        <th>
          <p>Opinion</p>
        </th>
        </tr>
            <% @user.books.each do |book| %>
		  	<tr>
          <td>
        		<%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg",:size => '30x30' %>
          </td>
        		<td><%= link_to book.title, book_path(book) %></td>
        		<td><%= book.body %></td>
      		</tr>
      		<% end %>
   		</tbody>
   		</table>
      </div>
     </div>
    </div>
</div>